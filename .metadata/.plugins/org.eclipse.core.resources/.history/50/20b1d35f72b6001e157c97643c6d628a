package hello.hellospring.repository;

import org.assertj.core.api.Assertions;
import org.junit.jupiter.api.Test;

import domain.Member;
import repository.MemberRepository;
import repository.MemotyMemberRepository;
import static org.assertj.core.api.Assertions.*; //Assertions를 기본 메소드로 넣고 메소드만쓴다.

public class MemmoryMemberRepositoryTest {
	
	MemberRepository repository = new MemotyMemberRepository();

	
	@Test
	public void save() {
		Member member = new Member();
		
		member.setName("spring");
		
		repository.save(member);
		
		Member result = repository.findById(member.getId()).get();
		
		assertThat(member).isEqualTo(result);
		
		
	}
	
	@Test
	public void findByName() {
		Member member1 = new Member();
		
		member1.setName("spring1");
		repository.save(member1);
		
		Member member2 = new Member();
		
		member1.setName("spring2");
		repository.save(member2);
		
		
		Member result = repository.findByNmae("spring2").get();
		
		
				
		
	}
	
}
